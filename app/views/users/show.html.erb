<header>
  <h2>
    Showing <%= @user.name %>'s account
  </h2>
</header>

<p class="profile_image">
  <%= image_tag gravatar_image(@user), alt: "profile image" %>
</p>

<article>
    <table>
      <tr>
        <th>
          User Name:
        </th>
        <td>
          <%= @user.name %>
        </td>
      </tr>
      <tr>
        <th>
          Username:
        </th>
        <td>
          <%=  @user.username %>
        </td>
      </tr>
      <tr>
        <th>
          User Email:
        </th>
        <td>
          <%= @user.email %>
        </td>
      </tr>
      <tr>
        <th>
          User Since:
        </th>
        <td>
          <%= present_created_at @user %>
        </td>
      </tr>
    </table>
    <br />
</article>

<% if current_user_or_admin? @user %>
  <p>
    <%= link_to "Delete Account", user_path(@user), data: { confirm: "Are you sure?"}, method: :delete %>
  </p>
<% end %>
<% if current_user? @user %>
  <p>
    <%= link_to "Edit Account", edit_user_path(@user) %>
  </p>
<% end %>
