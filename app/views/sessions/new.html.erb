<header>
  <h1>
    Sign in
  </h1>
</header>

<article>
  <fieldset>
      <%= form_tag :session do %>
        <p>
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, autofocus: true, required: true %>
        </p>
        <p>
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, required: true %>
        </p>
        <p>
          <%= submit_tag "Sign in" %>
        </p>
      <% end %>
  </fieldset>
</article>

<p>
  <%= link_to "Sign up", signup_path %>
</p>
