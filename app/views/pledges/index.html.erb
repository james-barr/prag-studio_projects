<header>
  <h2>
    <%= pluralize @pledges.count, "pledge" %> for <%= @project.name %>
  </h2>
</header>

<article>
  <% @pledges.each do |pl| %>

  <p class="profile_image">
    <%= gravatar_image(pl.user) %>
  </p>

    <ul>
      <li>
        <%= link_to pl.user.email, pl.user %>
      </li>
      <li>
        <%= pl.comment %>
      </li>
      <li>
        <%= pl.pledge %>
      </li>
      <li>
        <%= pl.location %>
      </li>
      <li>
        <%= time_since pl %>
      </li>
    </ul>
  <% end %>
</article>


<%= link_to "Back to project", project_path(@project) %>
