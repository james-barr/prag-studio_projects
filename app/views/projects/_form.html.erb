<%= render 'errors', object: @project %>

<%= form_for @project do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.label :target_pledge_amount %>
  <%= f.number_field :target_pledge_amount %>
  <br />
  <%= f.label :pledging_ends_on %>
  <%= f.date_select :pledging_ends_on %>
  <br />
  <%= f.label :website %>
  <%= f.url_field :website %>
  <br />
  <%= f.label :team_members %>
  <%= f.text_field :team_members %>
  <br />
  <% unless @project.new_record? %>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <br />
  <% end %>
  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>
  <br />
  <%= f.collection_check_boxes :type_ids, Type.all, :id, :name %>
  <br />
  <%= f.submit %>
  <%= link_to "Cancel", projects_url %>
<% end %>
